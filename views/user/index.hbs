<div class="container">
  <div class="row  pt-5">
    {{#each products}}
    <div class="col-md-4 pl-3">

      <div class="card mt-3 mb-2" style="width: 18rem;height: 28rem;">
        <img class="card-img-top" src="{{this.image}}" alt="Loading...."style="height:12rem;">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.price}}</p>
          <p class="card-text">{{this.description}}</p>
          <a href="#" class="btn btn-primary">Buy Now</a>
        </div>
      </div>

    </div>
    {{/each}}
  </div>
</div>